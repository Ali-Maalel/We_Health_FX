<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-border-style: solid;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ArticleItemController">
   <children>
      <HBox>
         <children>
            <BorderPane prefHeight="189.0" prefWidth="150.0">
               <center>
                  <ImageView fx:id="articleImg" pickOnBounds="true" preserveRatio="true" />
               </center>
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" top="5.0" />
               </HBox.margin>
            </BorderPane>
            <VBox prefHeight="189.0" prefWidth="399.0">
               <children>
                  <Label fx:id="articletitre" prefHeight="66.0" prefWidth="470.0" text="Titre">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label fx:id="tmev" prefHeight="45.0" prefWidth="469.0" text="Texte" />
                  <Label fx:id="articledate" prefHeight="44.0" prefWidth="469.0" text="Date">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Label fx:id="details" onMouseClicked="#details" prefHeight="44.0" prefWidth="469.0" text="Voir plus" underline="true">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="2.0" top="2.0" />
   </padding>
</AnchorPane>
